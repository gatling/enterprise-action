{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "rootDir": "src",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "exclude": ["dist", "**/*.test.ts", "jest.config.ts"]
}
